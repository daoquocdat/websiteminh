<script>
    document.addEventListener("DOMContentLoaded", function(){
        //xét bước active
        var items = document.querySelectorAll('.items')
        var active = items[1].setAttribute('class','items active')

        var form = document.getElementById('form')
        form.addEventListener("submit", function(e){
            e.preventDefault()
            var phuongThuc = form.elements["phuongThuc"].value;
            axios.post('/phuongThucThanhToan',{
                phuongThuc: phuongThuc
            })
            .then((res) => {
                localStorage.setItem ('phuongThucThanhToan', res.data.pttt);
                location.assign('/kiemTraDonHang')
            })
            .catch((err) => {console.log(err)})
        })
    })
</script>